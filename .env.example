# Example .env file for development — copy to .env and fill in real values (do NOT commit secrets)

# Database connection string expected by Drizzle + Neon
# e.g. postgres://username:password@host:5432/dbname
DATABASE_URL=

# Server port — default 5000
PORT=5000

# Node environment
NODE_ENV=development

# Add any other keys your deployment needs (e.g. SESSION_SECRET, API_KEYS)
# SESSION_SECRET=
 
# When set to 1 or true the server will start in mock mode without requiring DATABASE_URL
# Useful for local development / CI when you don't want to connect a real DB
USE_MOCKS=1